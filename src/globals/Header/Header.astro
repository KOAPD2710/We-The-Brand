---
import HeaderComp from './';
import Logo from '@assets/logo.svg?raw';
    
    const currentPath = Astro.url.pathname;

    const pathNav = [
        {
            name: 'Works',
            url: '#workSc'
        },
        {
            name: 'Services',
            url: '#servicesSc'
        }
    ]

import { getPage } from "@/components/core/prismic";

const { data } = await getPage("global_info");
---


<HeaderComp
    currPath={currentPath}
    navigation={pathNav}
    {...data}
    client:load
>
    <Fragment set:html={Logo} slot='logo'></Fragment>
</HeaderComp>