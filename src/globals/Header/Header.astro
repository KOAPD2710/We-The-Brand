---
    import Header from './';
    import Logo from '@assets/logo.svg?raw';
    
    const currentPath = Astro.url.pathname;

    const pathNav = [
        {
            name: 'Works',
            url: '/works'
        },
        {
            name: 'Services',
            url: '/services'
        },
        {
            name: 'About',
            url: '/about'
        }
    ]
---


<Header
    currPath={currentPath}
    navigation={pathNav}
    client:load
>
    <Fragment set:html={Logo} slot='logo'></Fragment>
</Header>